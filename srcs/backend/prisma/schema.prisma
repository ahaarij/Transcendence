generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}
model User {
  id           String    @id @default(uuid())
  username     String    @unique
  email        String    @unique
  password     String?
  refreshToken String?
  googleId     String?   @unique
  avatar       String?
  twoFactorSecret String?  // stores totp secret for 2fa
  twoFactorEnabled Boolean @default(false)  // if user has 2fa turned on
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  matches      Match[]   @relation("UserMatches")  // all matches where user participated
  
  // friend relationships - user can have friends and be a friend to others
  sentFriendRequests     Friend[] @relation("SentFriendRequests")
  receivedFriendRequests Friend[] @relation("ReceivedFriendRequests")
}

model Friend {
  id          Int       @id @default(autoincrement())
  userId      String    // user who sent the friend request
  user        User      @relation("SentFriendRequests", fields: [userId], references: [id], onDelete: Cascade)
  friendId    String    // user who received the friend request
  friend      User      @relation("ReceivedFriendRequests", fields: [friendId], references: [id], onDelete: Cascade)
  status      String    @default("pending")  // "pending", "accepted", "rejected"
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@unique([userId, friendId])  // prevents duplicate friend requests
}

model Match {
  id               Int       @id @default(autoincrement())
  userId           String    // the user who played (uuid)
  user             User      @relation("UserMatches", fields: [userId], references: [id])
  opponentId       String    // opponent username or "AI"
  userSide         Int       // 1 for left paddle, 2 for right paddle
  userScore        Int       // user's score
  opponentScore    Int       // opponent's score
  didUserWin       Boolean   // true if user won
  gameMode         String    // "PvP", "PvAI", "Tournament"
  tournamentSize   Int?      // optional: 4 or 8 players
  tournamentRound  Int?      // optional: which round in tournament
  isEliminated     Boolean?  // optional: if user got eliminated
  playedAt         DateTime  @default(now())  // when match was played
}
